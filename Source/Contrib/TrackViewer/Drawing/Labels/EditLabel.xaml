<Window x:Class="ORTS.TrackViewer.Drawing.Labels.EditLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="95" Width="250" Title="Label">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Name="labelType">Label text:</Label>
            <TextBox Height="23" HorizontalAlignment="Left" Margin="2" Name="textboxLabel" VerticalAlignment="Top" 
                     Width="170" KeyDown="OnKeyDownHandler"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="23" Name="buttonCancel" Margin="20,3,20,3" VerticalAlignment="Top" Click="ButtonCancel_Click">Cancel</Button>
            <Button Height="23" Name="buttonSearch" Margin="20,3,20,3" VerticalAlignment="Top" Click="ButtonOK_Click">OK</Button>
            <Button Height="23" Name="buttonDelete" Margin="20,3,20,3" VerticalAlignment="Top" Click="ButtonDelete_Click">Delete label</Button>
        </StackPanel>
    </StackPanel>
</Window>
